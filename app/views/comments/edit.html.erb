<h3>Edit Comment </h3>

<%= form_for @comment do |f|%>

<%if @comment.errors.any? %>
	<div class="errors" style="color: red;">
	<h3>These errors prohibited the form from being saved:</h3>
	<ul>
		<%@comment.errors.full_messages.each do |msg|%>
			<li><%= msg%></li>
		<%end%>
	</ul>
	</div>
	<%end%>

	
	

	<%=f.label :body%><br>
	<%=f.text_area :comment_body%><br>


	</br>


	<br>
	<br>


	<%=f.submit "Submit"%>

<%end%>	