<h2>Listing Categories</h2>


<h3><%= link_to "Add Category", new_category_path%></h3>
<ol>
	<% @categories.each do |category|%>
		<li><%=category.name %>
			<%= link_to "Edit Category Details", edit_category_path(category)%>
				<%= link_to "Delete this Category", category_path(category.id), method: :delete, data: {confirm: "Are you sure ???"} %>

			</li>

	<%end%>


</ol>




